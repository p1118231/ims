@{
    Layout = null; // Disable shared layout
    ViewData["Title"] = "Welcome to IMS - Sign In";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/signin.css" asp-append-version="true" />
</head>
<body>
    <div class="container signin-container">
        
         <div class="signin-header">
            <h1>Welcome to IMS</h1>
            <p>Your AI-powered solution for smarter inventory management.</p>
        </div>
        <div class="signin-body">
            <p>
                Harness the power of artificial intelligence to:
            </p>
            <ul>
                <li><strong>Predict Demand:</strong> Use AI-driven analytics to forecast stock needs and avoid overstocking or shortages.</li>
                <li><strong>Optimize Inventory:</strong> AI ensures optimal stock levels, minimizing costs while maximizing availability.</li>
                <li><strong>Automate Reordering:</strong> Smart algorithms automatically generate reorder suggestions based on usage trends.</li>
                <li><strong>Identify Trends:</strong> Spot fast-moving items and slow sellers with AI-powered insights.</li>
                <li><strong>Streamline Operations:</strong> AI simplifies managing supplier relationships and order histories.</li>
                <li><strong>Analyze Performance:</strong> Get detailed, AI-enhanced reports for better decision-making and growth.</li>
            </ul>
        </div>
        <div class="mt-4">
            <!-- Sign In Button -->
            <a class="btn btn-primary mb-3" asp-action="Login">
                <i class="bi bi-box-arrow-in-right"></i> Sign In or Login
            </a>

        </div>
        <div class="signin-footer">
            <p>Need help? <a href="/help">Contact Support</a></p>
            <p>&copy; 2024 Inventory Management System. All rights reserved.</p>
        </div>
    </div>
</body>
</html>