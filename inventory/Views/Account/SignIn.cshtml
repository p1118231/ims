@{
    Layout = null; // Disable shared layout
    ViewData["Title"] = "Welcome to IMS - Sign In";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/Account/SignIn.css" asp-append-version="true" />
</head>
<body>
    <div class="signin-wrapper">
        <!-- Left Section: Branding and Features -->
        <div class="signin-left">
            <div class="signin-left-content">
                <img src="~/images/ims_transparent-.png" alt="IMS Logo" class="signin-logo img-fluid" />
                <h1 class="signin-title">Welcome to IMS</h1>
                <p class="signin-subtitle">Your AI-powered solution for smarter inventory management</p>
                <ul class="signin-features list-unstyled mt-4">
                    <li><i class="bi bi-bar-chart-line me-2"></i> Predict demand with AI analytics</li>
                    <li><i class="bi bi-boxes me-2"></i> Optimize inventory levels</li>
                    <li><i class="bi bi-arrow-repeat me-2"></i> Automate reordering</li>
                    <li><i class="bi bi-graph-up-arrow me-2"></i> Identify trends instantly</li>
                </ul>
            </div>
        </div>

        <!-- Right Section: Sign-In Form -->
        <div class="signin-right">
            <div class="signin-form-container">
                <h2 class="signin-form-title">Sign In</h2>
                <p class="signin-form-subtitle">Access your inventory dashboard</p>
                <form asp-action="Login" method="post" class="signin-form">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required />
                    </div>
                    <div class="mb-4">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required />
                    </div>
                    <button type="submit" class="btn btn-signin w-100">Sign In <i class="bi bi-arrow-right ms-2"></i></button>
                </form>
                <p class="signin-help mt-3">Need help? <a href="/help" class="footer-link">Contact Support</a></p>
            </div>
        </div>
    </div>

    <footer class="signin-footer text-center">
        <p class="mb-0">Â© 2024 Inventory Management System. All rights reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>