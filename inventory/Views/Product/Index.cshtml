@model IEnumerable<Product>

@{
    ViewData["Title"] = "Product List";
    ViewData["ControllerName"] = "Product";
    ViewData["ActionName"] = "Index";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="page-title">Products</h1>

    <a asp-area="" class="btn btn-primary btn-sm" asp-controller="Product" asp-action="Create">
        <i class="bi bi-plus-lg"></i> Add Product
    </a>
</div>

<!-- Search & Filter Form -->
<form class="search-filter-form" method="get" asp-action="Index">
    <div class="row g-2 align-items-end">
        <!-- Search Bar -->
        <div class="col-md-4">
            <label for="query" class="form-label">Search Products</label>
            <input type="text" class="form-control" name="query" placeholder="Enter product name..." value="@ViewData["SearchQuery"]">
        </div>

        <!-- Category Filter -->
        <div class="col-md-3">
            <label for="category" class="form-label">Category</label>
            <select class="form-control" asp-items="ViewBag.Categories" name="categoryId">
                <option value="">All Categories</option>
            </select>
        </div>

        <!-- Supplier Filter -->
        <div class="col-md-3">
            <label for="supplier" class="form-label">Supplier</label>
            <select class="form-control" asp-items="ViewBag.Suppliers" name="supplierId">
                <option value="">All Suppliers</option>
            </select>
        </div>

        <!-- Buttons -->
        <div class="col-md-2 d-flex gap-2">
            <button type="submit" class="btn btn-primary w-100">
                <i class="bi bi-search"></i> Search
            </button>
            <a href="@Url.Action("Index", new { query = "", categoryId = "", supplierId = "" })" class="btn btn-secondary w-100">
                <i class="bi bi-x-circle"></i> Clear
            </a>
        </div>
    </div>
</form>

<!-- Product Table -->
<table class="table table-striped table-bordered mt-4">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.Name</td>
                <td>$@product.Price</td>
                <td>
                    @if (product.Quantity > 0)
                    {
                        <span>@product.Quantity</span>
                    }
                    else
                    {
                        <span class="text-danger">Out of Stock</span>
                    }
                </td>
                <td>@product.Category?.Name</td>
                <td>
                    <div class="d-flex gap-2">
                        <a href="@Url.Action("Details", new { id = product.ProductId })" class="btn btn-sm btn-secondary">
                            <i class="bi bi-eye"></i> View
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
