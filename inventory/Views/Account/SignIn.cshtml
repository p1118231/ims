@{
    Layout = null; // Disable shared layout
    ViewData["Title"] = "Welcome to IMS - Sign In";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/Account/SignIn.css" asp-append-version="true" />
</head>
<body>
    <div class="signin-container">
        <header class="signin-header text-center">
            <img src="~/images/ims_transparent-.png" alt="IMS Logo" class="signin-logo" />
            <h1 class="signin-title">Welcome to IMS</h1>
            <p class="signin-subtitle">Your AI-powered solution for smarter inventory management</p>
        </header>

        <main class="signin-body">
            <p class="signin-intro">Harness the power of artificial intelligence to:</p>
            <ul class="signin-features list-unstyled">
                <li><i class="bi bi-bar-chart-line"></i> <strong>Predict Demand:</strong> Use AI-driven analytics to forecast stock needs and avoid overstocking or shortages.</li>
                <li><i class="bi bi-boxes"></i> <strong>Optimize Inventory:</strong> AI ensures optimal stock levels, minimizing costs while maximizing availability.</li>
                <li><i class="bi bi-arrow-repeat"></i> <strong>Automate Reordering:</strong> Smart algorithms automatically generate reorder suggestions based on usage trends.</li>
                <li><i class="bi bi-graph-up-arrow"></i> <strong>Identify Trends:</strong> Spot fast-moving items and slow sellers with AI-powered insights.</li>
                <li><i class="bi bi-person-lines-fill"></i> <strong>Streamline Operations:</strong> AI simplifies managing supplier relationships and order histories.</li>
                <li><i class="bi bi-file-earmark-bar-graph"></i> <strong>Analyze Performance:</strong> Get detailed, AI-enhanced reports for better decision-making and growth.</li>
            </ul>
        </main>

        <div class="signin-actions text-center">
            <a class="btn btn-primary btn-signin" asp-action="Login">
                <i class="bi bi-box-arrow-in-right me-2"></i> Sign In or Login
            </a>
        </div>

        <footer class="signin-footer text-center">
            <p class="mb-1">Need help? <a href="/help" class="footer-link">Contact Support</a></p>
            <p class="mb-0">Â© 2024 Inventory Management System. All rights reserved.</p>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>