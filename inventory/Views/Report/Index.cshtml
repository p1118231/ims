@model inventory.Services.ReportRepo.ReportDto

@{
    ViewData["Title"] = "Report";
}

<head>
    <link rel="stylesheet" href="~/css/Report/Index.css" asp-append-version="true"/>
</head>

<div class="report-container">
    <h1 class="report-title">Report Overview</h1>

    <div class="report-section card">
        <div class="card-header">Sales Report</div>
        <div class="card-body">
            <dl class="report-list">
                <dt>Today's Sales Count</dt>
                <dd>@Model.TodaySalesCount</dd>
                <dt>Today's Sales Value</dt>
                <dd>£@Model.TodaySalesValue.ToString("N2")</dd>
                <dt>This Week's Sales Count</dt>
                <dd>@Model.WeekSalesCount</dd>
                <dt>This Week's Sales Value</dt>
                <dd>£@Model.WeekSalesValue.ToString("N2")</dd>
                <dt>This Month's Sales Count</dt>
                <dd>@Model.MonthSalesCount</dd>
                <dt>This Month's Sales Value</dt>
                <dd>£@Model.MonthSalesValue.ToString("N2")</dd>
            </dl>
        </div>
    </div>

    <div class="report-section card">
        <div class="card-header">Inventory Levels</div>
        <div class="card-body">
            <dl class="report-list">
                <dt>Total Products</dt>
                <dd>@Model.TotalProducts</dd>
                <dt>Total Suppliers</dt>
                <dd>@Model.TotalSuppliers</dd>
                <dt>Total Categories</dt>
                <dd>@Model.TotalCategories</dd>
                <dt>Total Orders</dt>
                <dd>@Model.TotalOrders</dd>
                <dt>Total Sales</dt>
                <dd>£@Model.TotalSales.ToString("N2")</dd>
            </dl>
        </div>
    </div>

    <div class="report-section card">
        <div class="card-header">Performance</div>
        <div class="card-body">
            <h3 class="subheader">Top Selling Products</h3>
            <ul class="report-ul">
                @foreach (var product in Model.TopSellingProducts)
                {
                    <li>@product.Name</li>
                }
            </ul>
            <h3 class="subheader">Least Selling Products</h3>
            <ul class="report-ul">
                @foreach (var product in Model.LowSellingProducts)
                {
                    <li>@product.Name</li>
                }
            </ul>
        </div>
    </div>

    <div class="report-section card">
        <div class="card-header">Supplier Performance</div>
        <div class="card-body">
            <h3 class="subheader">Top Suppliers</h3>
            <ul class="report-ul">
                @foreach (var supplier in Model.TopSuppliers)
                {
                    <li>@supplier.Name</li>
                }
            </ul>
        </div>
    </div>
</div>