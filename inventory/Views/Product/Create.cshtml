@model Product

@{
    ViewData["Title"] = "Create Product";
    ViewData["ControllerName"] = "Product";
    ViewData["ActionName"] = "Create";
}

<head>
    
    <link rel="stylesheet" href="~/css/Product/Create.css" />
</head>

<div class="create-container">
    <h1 class="create-title">Create Product</h1>

    <form asp-action="Create" method="post" class="create-form">
        <div class="form-group">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-input" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-input form-textarea"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" class="form-input" type="number" step="0.01" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Quantity" class="form-label"></label>
            <input asp-for="Quantity" class="form-input" type="number" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Supplier" class="form-label"></label>
            <select class="form-select" name="SupplierId" id="SupplierId" required>
                <option value="">Select Supplier</option>
                @foreach (var supplier in ViewBag.Suppliers as List<Supplier>)
                {
                    <option value="@supplier.SupplierId">@supplier.Name</option>
                }
            </select>
            <span asp-validation-for="Supplier" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ImageUrl" class="form-label"></label>
            <input asp-for="ImageUrl" class="form-input" type="url" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Category" class="form-label"></label>
            <select class="form-select" name="CategoryId" id="CategoryId">
                <option value="">Select Category</option>
                @foreach (var category in ViewBag.Categories as List<Category>)
                {
                    <option value="@category.CategoryId">@category.Name</option>
                }
            </select>
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-save">Create</button>
            <a asp-action="Index" asp-controller="Product" class="btn btn-cancel">Cancel</a>
        </div>
    </form>
</div>